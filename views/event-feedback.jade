extends ./layout.jade
block contenido
	div(class="container-fluid")
		div(class="col-md-3 panelContact")
			div(class="panel panel-default")
				div(class="panel-heading")
					b.
						Contact Details
				div(class="panel-body")
					p
						b Miller Event Management
					p
						b Address<br>
						|3563 Sueldo Street, Suite L, San Luis Obispo, Ca 93401
					p
						b Telephone<br>
						|(805) XXX-XXXX<br>
						b Fax<br>
						|(805) XXX-XXXX<br>
					p
						b 
							a(href="mailto:millereventmanagement@gmail.com" target="_blank")
								|Email us
					p
						b Location
						div(id="map")
					
		div(class="col-md-9 panelContact")
			div(class="panel panel-default")
				div(class="panel-heading")
					b.
						Event Feedback
				div(class="panel-body")
					form(class="form-horizontal")
						div(class="col-md-6 panelContact")
							div(class="form-group")
								label(for="name" class="col-md-2 control-label")
									|Name
								div(class="col-sm-10")
									input(type="text" class="form-control" id="name" name="name" placeholder="Name")
							div(class="form-group")
								label(for="email" class="col-sm-2 control-label")
									|Email address
								div(class="col-sm-10")
									input(type="email" class="form-control" id="email" name="email" placeholder="Email" pattern="^[\w._%-]+@[\w.-]+\.[a-zA-Z]{2,4}$" title="that email address is invalid")
							div(class="form-group")
								label(for="tel" class="col-sm-2 control-label")
									|Phone
								div(class="col-sm-10")
									input(type="tel" class="form-control" id="tel" name="tel" placeholder="Phone")
							div(class="form-group")
								label(for="event" class="col-sm-2 control-label")
									|Event Name
								div(class="col-sm-10")
									input(type="text" class="form-control" id="event" name="event" placeholder="Event Name" requ)
							div(class="form-group")
								label(for="feedbackEvent" class="col-sm-2 control-label")
									|Feedback
								div(class="col-sm-10")
									textarea(class="form-control" id="feedbackEvent" name="feedback" rows="3")
						div(class="col-md-6 panelContact")
							fieldset(class="form-group")
								legend
									|Event Location
								div(class="form-group")
									label(for="nameevent" class="col-md-2 control-label")
										|Name
									div(class="col-sm-10")
										input(type="text" class="form-control" id="nameevent" name="nameevent" placeholder="Name event" required)
								div(class="form-group")
									label(for="addressevent" class="col-sm-2 control-label")
										|Address
									div(class="col-sm-10")
										input(type="email" class="form-control" id="addressevent" name="addressevent" placeholder="Address Event" required="s")
								div(class="form-group")
									label(for="cityevent" class="col-sm-2 control-label")
										|City
									div(class="col-sm-10")
										input(type="tel" class="form-control" id="cityEvent" name="cityevent" placeholder="City Event" required)
								div(class="form-group")
									label(for="state" class="col-sm-2 control-label")
										|State
									div(class="col-sm-10")
										input(type="text" class="form-control" id="state" name="state" placeholder="State Event" required)
								div(class="form-group")
									label(for="zip" class="col-sm-2 control-label")
										|Zip
									div(class="col-sm-10")
										input(type="text" class="form-control" id="zip" name="zip" required)
						button(type="submit" class="btn btn-default no-float center-block")
								|Submit
				
